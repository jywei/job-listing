    <%= render 'job_listing' %>
  </div>
  <div id="saved_cv" class="tab-pane fade">
    <h3>Saved CV</h3>
    <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
  </div>
  <div id="status" class="tab-pane fade">
    <h3>Account Status</h3>
