<!DOCTYPE html>
<html>
<head>
  <title>JobsBoard</title>
  <%= stylesheet_link_tag  'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href='/admin' class="navbar-brand">Job-Board</a>
      </div>
      <div class="navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Seeker", admin_seeker_path %></li>
          <li><%= link_to "Company", admin_companies_path %></li>
          <li><%= link_to "Contact", admin_contact_path %></li>
          <li><%= link_to "JobFilter", admin_job_filter_path %></li>
        </ul>
      </div>
    </div>
  </nav>

  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

  <div class="container-fluid">
    <%= yield %>
  </div>
  
  <%= debug(params) if Rails.env.development? %>

</body>
</html>
