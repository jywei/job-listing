<div id="filterrific_results">
  <div style="margin-bottom: 20px;">
    <%= page_entries_info companies, entry_name: "Companies", model: 'company' %>
    <%= will_paginate companies %>
  </div>
  <div class="table">
    <% companies.each do |company| %>
      <div class="job-list" style="border: 1px solid #111111; padding: 10px;">
        <tr>
          <td><%= image_tag company.cover.url(:preview), class: "img-rounded text-center", size: '230x100' %></td><br />
          <td><%= image_tag company.image.url(:thumb), class: "img-rounded text-center", size: '50x50' %></td>
          <td><h2><%= link_to company.name.titleize, company %></h2></td>
          <td><p><%= truncate(company.about, length: 30) %></p></td>
          <td><i class="fa fa-eye"></i><p><%= "#{ company.impressionist_count } views" %></p></td>
          <hr>
          <td><i class="fa fa-building"></i><p><%= company.industry.name %></p></td>
          <td><i class="fa fa-map-marker"></i><p><%= company.location.name + "," if company.location.present? %> <%= company.country.name if company.country.present? %></p></td>
        </tr>
      </div>
    <br>
    <% end %>
  </div>
</div>

<%= will_paginate companies %>
